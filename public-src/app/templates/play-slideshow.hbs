<div class="ui column grid">

    <h2> Playing {{model.name}} </h2>
    {{#each model.links key="id" as |link|}}
        <div>
            <a href="{{link.url}}"> {{link.title}} </a>
        </div>
    {{/each}}

    <div class="ui left icon input" {{action 'addLink'}}>
        <i class="plus icon"></i>
        <input placeholder="Add Link" type="text">
    </div>

    <div class="row"></div>
    <div class="row"></div>

    <button class="ui button" {{action 'playSlideshow'}}>
        <p style="font-size:200%">
            Play slideshow!
        </p>
    </button>

</div>

{{outlet}}

